<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/toolbar"
        android:id="@+id/rvcontacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   />

<Button
    android:id="@+id/btnlistview"
    android:layout_marginTop="20dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rvcontacts"
    android:text="toListView"
    />



    <Button
        android:id="@+id/btnvolley"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlistview"
        android:text="To_Volley"
        />



    <Button
        android:id="@+id/btnretrofit"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnvolley"
        android:text="To_Retrofit"
        android:backgroundTint="@color/colorBlue"
        />


    <Button
        android:id="@+id/btnphonecontact"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnretrofit"
        android:text="Phone Contacts"
        android:backgroundTint="@color/colorRed"
        />









    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnaddcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorBlue"
        android:src="@drawable/add"
        app:tint="@color/colorWhite" />



</RelativeLayout>